<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_woman_watching"
    tools:context=".activity.StartActivity">

    <TextView
        android:id="@+id/tv_start"
        android:layout_width="@dimen/_314dp"
        android:layout_height="@dimen/_108dp"
        android:layout_marginStart="@dimen/_16dp"
        android:layout_marginEnd="@dimen/_16dp"
        android:layout_marginBottom="@dimen/_20dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="@string/explanation_start"
        android:textColor="@color/white"
        android:textSize="@dimen/_22sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="@dimen/_200dp"
        android:layout_height="@dimen/_64dp"
        android:layout_marginBottom="@dimen/_50dp"
        android:background="@drawable/background_button"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/get_started"
        android:textAllCaps="false"
        android:textSize="@dimen/_20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_start"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/tv_start" />

</androidx.constraintlayout.widget.ConstraintLayout>